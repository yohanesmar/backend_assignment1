<!DOCTYPE html>
<html>
<head>
    <style>
        table {
            width: 50%;
            border-collapse: collapse;
        }
        table, th, td {
            border: 4px solid black;
        }
        th, td {
            padding: 8px;
            text-align: left;
        }
    </style>
</head>
<body>
    <table>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Author</th>
                <th>Year Written</th>
                <th>Edition</th>
                <th>Price</th>
            </tr>
            <% books.forEach(book => { %>
                <tr>
                    <td><%= book.id %></td>
                    <td><%= book.title %></td>
                    <td><%= book.author %></td>
                    <td><%= book.year_written %></td>
                    <td><%= book.edition %></td>
                    <td><%= book.price %></td>
                </tr>
            <% }) %>
    </table>
</body>
</html>
